<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s_Ract3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".s_act_3">

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/s_scroll1"
        android:layout_alignParentEnd="false"
        android:text="@string/back"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/s_bg4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/s_bg4" />

    <ScrollView
        android:id="@+id/s_scroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/act_3_ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">>

            <TextView
                android:id="@+id/act_3_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/act1_but2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/act_3_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/group1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/act_3_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/group1_male"
                android:textAlignment="viewStart"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/act_3_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/group2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/act_3_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/group2_female"
                android:textAlignment="viewStart"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>